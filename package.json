{
  "name": "svelte-animated-counter",
  "type": "module",
  "version": "0.1.3",
  "license": "MIT",
  "main": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "description": "Animated counter component for Svelte/SvelteKit",
  "keywords": [
    "Svelte",
    "SvelteKit",
    "Counter",
    "Animated Counter"
  ],
  "repository": "https://github.com/calvo-jp/svelte-animated-counter",
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-animated-counter/issues"
  },
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "release": "release-it"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "5.4.4",
    "@sveltejs/kit": "2.5.28",
    "@sveltejs/package": "2.3.5",
    "@sveltejs/vite-plugin-svelte": "3.1.2",
    "@types/eslint": "9.6.1",
    "@typescript-eslint/eslint-plugin": "8.6.0",
    "@typescript-eslint/parser": "8.6.0",
    "autoprefixer": "10.4.20",
    "clean-package": "2.2.0",
    "eslint": "9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.44.0",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prettier-plugin-svelte": "3.2.6",
    "publint": "0.2.11",
    "release-it": "17.6.0",
    "svelte": "5.0.0-next.250",
    "svelte-check": "4.0.2",
    "tailwindcss": "3.4.12",
    "tslib": "2.7.0",
    "typescript": "5.6.2",
    "vite": "5.4.6",
    "vitest": "2.1.1"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check"
      ],
      "after:bump": [
        "pnpm package"
      ]
    }
  },
  "clean-package": {
    "remove": [
      "devDependencies",
      "scripts",
      "release-it",
      "clean-package"
    ]
  }
}
