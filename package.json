{
  "name": "svelte-animated-counter",
  "type": "module",
  "version": "0.1.1",
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "package.json": "./package.json"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "description": "Animated counter component for Svelte/SvelteKit",
  "keywords": [
    "Svelte",
    "SvelteKit",
    "Counter",
    "Animated Counter"
  ],
  "repository": "https://github.com/calvo-jp/svelte-animated-counter",
  "bugs": {
    "url": "https://github.com/calvo-jp/svelte-animated-counter/issues"
  },
  "author": {
    "name": "John Paul Calvo",
    "email": "calvojp92@gmail.com"
  },
  "packageManager": "pnpm@9.4.0",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "release": "release-it"
  },
  "devDependencies": {
    "@sveltejs/adapter-vercel": "5.3.2",
    "@sveltejs/kit": "2.5.17",
    "@sveltejs/package": "2.3.2",
    "@sveltejs/vite-plugin-svelte": "3.1.1",
    "@types/eslint": "8.56.10",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "autoprefixer": "10.4.19",
    "clean-package": "2.2.0",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.41.0",
    "postcss": "8.4.38",
    "prettier": "3.3.2",
    "prettier-plugin-svelte": "3.2.5",
    "publint": "0.2.8",
    "release-it": "17.4.0",
    "svelte": "5.0.0-next.165",
    "svelte-check": "3.8.2",
    "tailwindcss": "3.4.4",
    "tslib": "2.6.3",
    "typescript": "5.5.2",
    "vite": "5.3.1",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "svelte": ">=5.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${npm.name} v${version}",
      "tagName": "${npm.name}@${version}"
    },
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": [
        "pnpm check"
      ],
      "after:bump": [
        "pnpm package"
      ]
    }
  },
  "clean-package": {
    "remove": [
      "devDependencies",
      "scripts",
      "release-it",
      "clean-package"
    ]
  }
}
